{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmpassword": {
            "type": "string",
            "metadata": {
                "description":"Please enter the admin password"
            }
        }
    },
    "functions": [],
    "variables": {
        "resourceLocation": "Canada Central"
    },
    "resources": [
        {
        "name": "appnetwork",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2022-07-01",
        "location": "[variables('resourceLocation')]",
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.0.0.0/16"
                ]
            },
            "subnets": [
                {
                    "name": "SubnetA",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                },
                {
                    "name": "SubnetB",
                    "properties": {
                        "addressPrefix": "10.0.1.0/24"
                    }
                }
            ]
        }
    },
    {
        "name": "app-ip",
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2022-09-01",
        "location": "[variables('resourceLocation')]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic"
        }
    },
    {
        "name": "app-interface",
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2022-09-01",
        "location": "[variables('resourceLocation')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks', 'appnetwork')]",
            "[resourceId('Microsoft.Network/publicIPAddresses', 'app-ip')]",
            "[resourceId('Microsoft.Network/networkSecurityGroups', 'app-nsg')]"
        ],
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipConfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "subnet": {
                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'appnetwork', 'subnetA')]"
                        },
                        "publicIPAddress": {
                            "id":"[resourceId('Microsoft.Network/publicIPAddresses', 'app-ip')]"
                        }
                    }
                }
            ],
            "networkSecurityGroup": {
                "id":"[resourceId('Microsoft.Network/networkSecurityGroups', 'app-nsg')]"
            }
        }
    },
  {
    "name": "appstorgaccnt",
    "type": "Microsoft.Storage/storageAccounts",
    "apiVersion": "2022-09-01",
    "location": "[resourceGroup().location]",
    "kind": "StorageV2",
    "sku": {
        "name": "Standard_LRS"
    }
  },
{
    "name": "app-nsg",
    "type": "Microsoft.Network/networkSecurityGroups",
    "apiVersion": "2022-09-01",
    "location": "[resourceGroup().location]",
    "properties": {
        "securityRules": [
            {
                "name": "Allow-RDP",
                "properties": {
                    "description": "Allow Remote Desktop",
                    "protocol": "Tcp",
                    "sourcePortRange": "*",
                    "destinationPortRange": "3389",
                    "sourceAddressPrefix": "*",
                    "destinationAddressPrefix": "*",
                    "access": "Allow",
                    "priority": 100,
                    "direction": "Inbound"
                }
            }
        ]
    }
},
{
    "name": "appvm",
    "type": "Microsoft.Compute/virtualMachines",
    "apiVersion": "2022-11-01",
    "location": "[resourceGroup().location]",
    "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', toLower('appstorgaccnt'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', 'app-interface')]"
    ],
    "properties": {
        "hardwareProfile": {
            "vmSize": "Standard_D2s_v3"
        },
        "osProfile": {
            "computerName": "windowsVM1",
            "adminUsername": "appusr",
            "adminPassword": "[parameters('vmpassword')]"
        },
        "storageProfile": {
            "imageReference": {
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2022-Datacenter",
                "version": "latest"
            },
            "osDisk": {
                "name": "windowsVM1OSDisk",
                "caching": "ReadWrite",
                "createOption": "FromImage"
            }
        },
        "networkProfile": {
            "networkInterfaces": [
                {
                    "id": "[resourceId('Microsoft.Network/networkInterfaces', 'app-interface')]"
                }
            ]
        },
        "diagnosticsProfile": {
            "bootDiagnostics": {
                "enabled": true,
                "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', toLower('appstorgaccnt'))).primaryEndpoints.blob]"
            }
        }
    }
}
    ],
    "outputs": {}
}